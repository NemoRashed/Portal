<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="icon" href="/images/favicon.png" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/services.css" />
  </head>

  <body>
    <%- include('../../../components/header.ejs') %>

    <h1>Samsung</h1>




    <% if (samsungs && samsungs.length > 0){ %> 

<% samsungs.forEach(samsung => { %>
        <figure className="">
          <a href= <%=`/services/repairs/samsung/${samsung.url}` %> >
            <image
              src=<%= `/images/services/repairs/samsung/${samsung.image}` %>
              alt= <%= samsung.category %>
              width="200"
              height="200"
            />
          </a>
          <figcaption><%= samsung.category %></figcaption>
        </figure>

       
      <% }) %> 
      <% } else { %>
      <p>There are no samsung to display. </p>
      <% } %>
 
    
    <%- include('../../../components/footer.ejs') %>
  </body>
</html>
